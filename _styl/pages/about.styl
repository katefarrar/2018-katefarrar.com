/*--------------------------------------------------------------------
* $ABOUT
--------------------------------------------------------------------*/

header.about
  background-image: url('../images/about-bg-leaves.jpg')
  background-size: cover;
  background-position: center;
  height: 400px;
  
  h2.title a
    color: $white;
    
  a
    color: $white;
    border-color: $white;
    
  .foot
    position: relative;
    bottom: 0;

.about
  
  h1.title
    padding: 20px 0 0;
  
  .pic
    margin: 0 auto;
    margin-bottom: 25px;
    width: 400px;
  
  blockquote
    margin: 0 auto;
    
  p
    font-size: 20px;
    
  p, h3
    padding: 5px 0;
    
  h3
    padding-bottom: 0;
    margin-bottom: 0;
    
  ul
    margin-bottom: 20px;
    list-style-type: circle;
    
    li
      list-style-position: inside;
  
  .gifs
    margin: 0 auto;
    text-align: center;
    
    img
      display: block;
      text-align: center;
      margin: 10px auto 0;
      height: 200px;
      
@media only screen and (max-width: 630px)
      
  .about h1.title
    padding-top: 20px;
