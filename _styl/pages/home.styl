/*--------------------------------------------------------------------
* $HOME
--------------------------------------------------------------------*/
.content
  max-width: 700px;
  
header
  padding-top: 25px;
    
.home
  .main-pic
    border-radius: 50%;
    margin: 0 auto;
    opacity: .85;
    margin-bottom: 55px;
  
  .overlay
    background-color: $purple;
    
  h2
    margin-bottom: 25px;
  
  .icons-wrap
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
    margin: 10px 0;
    
    .item
      order: 1;
      text-align: center;
      
      
      img
        margin: 0 auto;
        padding-bottom: 10px;
        
      .large
        width: 168px;
      .med
        width: 145px;
      .small
        width: 100px;
      
