/*--------------------------------------------------------------------
* $HOME
--------------------------------------------------------------------*/
.content
  max-width: 860px;
  
header
  padding-top: 25px;
    
.home
  
  #intro
    padding-top: 80px;

    .main-pic
      float: left;
      border-radius: 50%;
      margin: 0 auto;
      opacity: .85;
      margin-bottom: 55px;
    
    .overlay
      background-color: $purple;
      
    h1
      float: left;
      font-size: 28px;
      padding-top: 60px;
      padding-left: 20px;
      width: 70%;
      
  #info
    padding: 80px 0;
    
    h2
      margin-bottom: 25px;
  
  .icons-wrap
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    margin: 10px 0;
    
    .item
      flex-basis: 33%;
      text-align: center;
      
      
      img
        margin: 0 auto;
        padding-bottom: 10px;
        
      .large
        width: 175px;
      .med
        width: 155px;
      .small
        width: 120px;
      
