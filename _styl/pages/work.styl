/*--------------------------------------------------------------------
* $WORK
--------------------------------------------------------------------*/

.work

  .content
    margin: 0 auto;
    width: 900px;
  
  .work-wrap
    flex: 1;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
    
  .work-item
    margin: 15px 5px 15px 0;
    max-width: calc(50% - 15px);
    
    p
      margin-bottom: 5px;

    li
      display: inline
      margin-right: 5px
      font-size: 12px;
      
    li:last-child
      margin-right: 0
    

  .key
    
    span
      display: inline-block
      border-radius: 50%;
      width: 15px;
      height: 15px;
      margin-right: 2px;
      margin-left: 2px;
      padding: 0 4px;
      
    span.red
      background-color: red;
      
    span.blue
      background-color: blue;
      
    span.green
      background-color: green;
      
    span.orange
      background-color: orange;
      
  .key-top
    li
      font-size: 12px;
      display: inline;
      margin-right: 15px;
      &:last-child
        margin-right: 0;
